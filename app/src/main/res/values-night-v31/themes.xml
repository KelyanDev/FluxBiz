<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.FluxBiz" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors for dark mode -->
        <item name="colorPrimary">@color/my_dark_primary</item>
        <item name="colorPrimaryVariant">@color/my_dark_primary_variant</item>
        <item name="colorOnPrimary">@color/my_dark_on_primary</item>

        <!-- Surface and text colors -->
        <item name="colorSurface">@color/my_dark_surface</item>
        <item name="colorOnSurface">@color/colorButtonDisabled</item>
        <item name="colorOutline">@color/my_dark_border</item>
        <item name="colorOnSecondary">@color/my_dark_secondary_text</item>

        <!-- Background colors -->
        <item name="colorBackgroundFloating">@color/my_dark_on_primary</item>
        <item name="android:colorBackgroundFloating">@color/my_dark_on_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo</item>

        <!-- Status bar and system UI -->
        <item name="android:statusBarColor">@color/my_dark_on_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="materialButtonOutlinedStyle">@style/CustomOutlinedButtonStyle</item>

    </style>
</resources>